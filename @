# Clear any existing documents first
curl -X POST http://localhost:8000/api/clear-documents

# Add a test document
curl -X POST http://localhost:8000/api/process-content \
  -H "Content-Type: application/json" \
  -d '{"type": "text", "text": "This is a test document about cats and dogs. Cats are independent pets. Dogs are loyal companions.", "summary_level": "quick"}'

# Check QA status after adding document
curl http://localhost:8000/api/qa-debug

# Try asking a question via curl
curl -X POST http://localhost:8000/api/ask-question \
  -H "Content-Type: application/json" \
  -d '{"question": "What pets are mentioned?"}'
